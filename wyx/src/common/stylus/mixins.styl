right-border-1px($color,$x)
  position relative
  border none
  &:after
    content ''
    position absolute
    left $x
    bottom 0
    width 1px
    height 100%
    background-color $color
    transform scaleX(0.5)


border-1px($color)
  position relative
  &::after
    content ""
    display block
    position absolute
    bottom 0
    left 0
    width 100%
    height 1px
    background $color
    @media screen and (-webkit-device-pixel-ratio:2)
      transform scaleY(.5)
    @media screen and (-webkit-device-pixel-ratio:3)
      transform scaleY(.33333)
